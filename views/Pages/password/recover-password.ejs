<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../Templates/head') %>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="../styles/css/custom-css/forgot-password.css">
    <link rel="stylesheet" href="../styles/css/bootstrap-css/bootstrap.css">

    <style>
        /* @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap'); */
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

        .form-center {
            max-width: 600px;
            margin: 30px auto 80px auto;
        }

        #otpBtn{
            height: 50px!important;
        }

        #exampleInputEmail1{
            height: 100px!important;
            font-size: 24px;
            line-height: 40px;
        }

        .form-center form {
            padding: 40px 0;

        }

        .form-center h1,
        p {
            text-align: center;
        }

        .form-group button {
            font-family: Poppins;
            font-style: normal;
            font-weight: 500;
            height: 50px!important;
            font-size: 20px;
        }

        .form-center h1 {
            font-family: Poppins, 'san-serif';
            font-style: normal;
            font-weight: 500;
            font-size: 40px;
            line-height: 40px;
            color: #084482;
        }

        .form-center p {
            font-size: 18px;
            font-family: Poppins, 'san-serif';
            font-style: normal;
            font-weight: normal;
            line-height: 27px;
            text-align: center;
            color: #1F2430;
        }

        .form-group input {
            height: 100px!important;
            font-size: 24px;
            line-height: 40px;
        }

        .form-group label {
            font-family: Poppins, 'san-serif';
            font-style: normal;
            font-weight: normal;
            font-size: 16px;
            line-height: 27px;
            text-align: center;
            color: #1F2430;
        }

        input::placeholder {
            color: rgba(178, 178, 178, 0.58);
            font-size: 20px;
        }

        .otp-input::placeholder {
            text-align: center;
        }

        .no-code h6 {
            padding: 20px 0;
            color: #1F2430;
        }
        
        .no-code h6>a {
            text-decoration: none;
            color: #084482;
        }

        .pass-recovered h1 {
            padding-bottom: 10px;
        }

        .pass-recovered p {
            padding: 0 20px 30px 40px;
            max-width: 400px;
            margin: 0 auto;
        }

        .pass-recovered button {
            margin-top: 20px;
        }

        .error {
            color: red;
            text-align: center;
            font-size: 12px
        }

        .form-control {
            height: 80px !important;
        }

        .password-reset-btn {
            font-family: Poppins;
            font-style: normal;
            height: 50px !important;
            font-weight: 500;
            font-size: 24px;
            background-color: #00AEFF;
            color: #fff;
        }

        .password-reset-btn:hover {
            background-color: #337AB7;
            color: #fff;
        }

        @media screen and (max-width:576px) {
            .otp-wrapper {
                flex: 0, 0 16.67%;
                Width: 50px;
                align-self: center;
                margin: 0 auto;
            }
        }
    </style>
</head>

<body class="pass_page">
    <!-- NAV-BAR -->
    <%- include('../../Templates/header') %>

    <div class="container-fluid">
        <div class="form-center">
            <h1>Forgotten your password?</h1>
            <p>Enter the information required below</p>
            <form id="forgot-password">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <h6 class="error"></h6>
                    <input type="email" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="e.g. 'test@example.com'" required>
                </div>
                <button type="submit" class="btn password-reset-btn btn-lg btn-block" id="otpBtn">Reset</button>
            </form>
        </div>
    </div>

    <%- include('../../Templates/footer') %>
    <script src="../js/custom-js/forgot-password.js"></script>
</body>

</html>